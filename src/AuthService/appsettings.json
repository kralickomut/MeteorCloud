{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=auth_service_db;Username=meteorcloud;Password=secretpassword",
    "Redis": "${REDIS_HOST}:${REDIS_PORT}"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-key",
    "Issuer": "MeteorCloud",
    "Audience": "MeteorCloudClients",
    "ExpiresInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
